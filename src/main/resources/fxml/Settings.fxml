<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="com.evandro.challenges.bitsobitcointrader.view.controllers.SettingsController">
    <Label layoutX="24.0" layoutY="2.0" text="Runtime arguments">
        <padding>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
        </padding>
    </Label>
    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="X Value"/>
        <Spinner fx:id="xValueSpinner" prefHeight="25.0" prefWidth="75.0" editable="true" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
        </Spinner>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="M Value"/>
        <Spinner fx:id="mValueSpinner" prefHeight="25.0" prefWidth="75.0" editable="true" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
        </Spinner>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="N Value"/>
        <Spinner fx:id="nValueSpinner" prefHeight="25.0" prefWidth="75.0" editable="true" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
        </Spinner>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button fx:id="cancelButton" layoutX="137.0" layoutY="162.0" mnemonicParsing="false" text="Cancel"/>
        <Button fx:id="okButton" layoutX="137.0" layoutY="162.0" mnemonicParsing="false" text="OK">
            <HBox.margin>
                <Insets left="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
